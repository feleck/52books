%h1
  You want to start reading:
  = @book.title
  by:
  - @book.authors.each do |author|
    = author.full_name
= form_for @book, url: { action: 'started_reading' } do |f|
  - if @book.errors.any?
    .alert.alert-danger
      %h3
        = t('errors.template.body')
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label 'Date'
    = f.date_field :start_reading_date
  %p
    = f.submit 'Start'
%br

=link_to 'Cancel', library_path, class: 'btn'
